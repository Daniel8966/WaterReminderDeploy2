    <section class="portfolio-block mobile-app" style="margin-top: 5%;">
        <h1 style="text-align: center;">Usuarios</h1>
        <div class="container-fluid" style="margin-bottom: 50px;">
            <div class="card" id="TableSorterCard" style="border-style: none;border-radius: 6.5px;">
                <div class="card-header py-3" style="border-width: 0px;background: rgb(23,25,33);">
                    <div class="row table-topper align-items-center">
                        <div class="col-12 col-sm-5 col-md-6 text-start" style="margin: 0px;padding: 5px 15px;">
                            <p class="m-0 fw-bold" style="color: rgb(255,255,255);">Usuarios de Water Reminder</p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="table-responsive" style="border-top-style: none;background: #171921;">
                            <table class="table table-striped table tablesorter" id="ipi-table">
                                <thead class="thead-dark"
                                    style="background: rgb(33,37,48);border-width: 0px;border-color: rgb(0,0,0);border-bottom-color: #21252F;">
                                    <tr
                                        style="border-style: none;border-color: rgba(255,255,255,0);background: #21252f;">
                                        <th class="text-center filter-false sorter-false">id</th>
                                        <th class="text-center">ID persona</th>
                                        <th class="text-center">NOMBRE</th>
                                        <th class="text-center">Meta</th>
                                        <th class="text-center">cORREO</th>
                                        <th class="text-center filter-false sorter-false">Acciones</th>
                                    </tr>
                                </thead>

                                <% var i=0; usuarios.forEach((user)=>{i++;

                                    %>

                                    <form action="admin/registros" id="registros-Usuario" method="post">
                                        <input type="hidden" value="<%=user.idPersona%>" name="idPersona">
                                    </form>
                                    <form action="admin/delUsuario" id="borrar-usuario" method="post">
                                            <input type="hidden" value="<%=user.idUsuario%>" name="idUsuario">
                                            <tbody class="text-center" style="border-top-width: 0px;">
                                                <tr style="background: #262a38;">
                                                    <td style="color: rgb(255,255,255);">
                                                        <%=user.idUsuario%>
                                                    </td>
                                                    <td style="color: rgb(255,255,255);">

                                                        <%=user.idPersona%>
                                                    </td>
                                                    <td style="color: rgb(255,255,255);">
                                                        <%=user.Usuario%>
                                                    </td>
                                                    <td style="color: rgb(255,255,255);">
                                                        <%=user.meta_agua%> mL
                                                    </td>
                                                    <td style="color: rgb(255,255,255);">
                                                        <%=user.email%>
                                                    </td>
                                                    <td class="text-center align-middle"
                                                        style="max-height: 60px;height: 60px;">

                                                        <a onclick="event.preventDefault(); document.getElementById('registros-Usuario').submit();"
                                                        class="btn btnMaterial btn-flat accent btnNoBorders checkboxHover"
                                                        role="button" style="margin-left: 5px;"
                                                        data-bs-toggle="modal" data-bs-target="#delete-modal"
                                                        href="#"><i class="far fa-eye"
                                                            style="color: #11d9e0;"></i></a>

                                                        <a class="btn btnMaterial btn-flat success semicircle"
                                                            role="button" href="#modal<%=i%>"
                                                            style="color: rgb(0,197,179);"><i class="fas fa-pen"
                                                                style="color: rgb(4,75,192);"></i></a>

                                                        <a onclick="event.preventDefault(); document.getElementById('borrar-usuario').submit();"
                                                            class="btn btnMaterial btn-flat accent btnNoBorders checkboxHover"
                                                            role="button" style="margin-left: 5px;"
                                                            data-bs-toggle="modal" data-bs-target="#delete-modal"
                                                            href="#"><i class="fas fa-trash btnNoBorders"
                                                                style="color: #DC3545;"></i></a>
                                                    </td>
                                                </tr>
                                        </form>

                                    <div id="modal<%=i%>" class="modalmask">

                                        <div class="modalboxs movedown" style="background-color: black;">
                                            <form action="admin/updateUser" method="post">
                                                <a href="#close" title="Close" class="close">X</a>
                                                <input type="hidden" value="<%=user.idUsuario%>" name="idUsuario">
                                                <br><br>
                                                <label>
                                                    <font color="white">nombre</font>
                                                </label>
                                                <input type="text" name="nombre">
                                                <br><br>
                                                <label>
                                                    <font color="white">email</font>
                                                </label>
                                                <input type="text" name="correo">
                                                <br><br>
                                                <input class="input" type="submit" value="Enviar">



                                            </form>

                                        </div>
                                    </div>
                                    <% } )%>
                                        </tbody>


                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
