    <link rel="stylesheet" href="/assets/css/Simple-Bootstrap-Chat.css">
    <link rel="stylesheet" href="/assets/css/Team-icons.css">
    <link rel="stylesheet" href="/assets/css/untitled.css">
    <link rel="stylesheet" href="/assets/css/User-Rating-F19690.css">
</head>

<body>
    <nav class="navbar navbar-dark navbar-expand-lg fixed-top portfolio-navbar gradient"
        style="background: linear-gradient(120deg, #125de0, #0effff);height: 6rem;width: 100%;">
        <div class="container"><a class="navbar-brand logo" href="#">WR</a><button data-bs-toggle="collapse"
                class="navbar-toggler" data-bs-target="#navbarNav"><span class="visually-hidden">Toggle
                    navigation</span><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item item"><a class="nav-link active" href="/home">Home</a></li>
                    <li class="nav-item item"><a class="nav-link" href="/regAgua">Registro</a></li>
                    <li class="nav-item item"><a class="nav-link" href="/refrescos">Otras Bebidas</a></li>
                    <li class="nav-item item"><a class="nav-link" href="/grupos">Grupos</a></li>
                    <li class="nav-item item"><a class="nav-link" href="/perfil">Perfil</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <section class="portfolio-block projects-cards">
        <div class="container">
            <div class="heading"></div>
        </div>
        <div class="container" style="margin-top: -60px;">
            <div class="row">
                <div class="col-md-6">
                    <div class="user-body">
                        <h2 class="text-capitalize" style="margin-top: 25px;color: rgb(15,203,245);">
                            <%=nombreGrupo%> : <%=codigo%>

                        </h2><span class="heading">Ranking de Usuarios por consumo Diario</span>
                        <hr style="border:3px solid #f1f1f1">
                        <div class="rg-row">
                            <%let i=0 ;%>
                                <% respuesta.forEach((user)=>{ 
                                    
                                    let porcentaje = parseInt(consumos[i])/(parseInt(user.meta_agua) / 100);

                                    if (porcentaje >= 100){
                                        porcentaje = 100;
                                    }
                                    %>
                                    <div style="width: 130px;" class="side">
                                        <div><span>
                                                <%=user.nombre%>
                                            </span></div>
                                    </div>
                                    <div class="middle">
                                        <div class="bar-container">
                                            <% if (porcentaje == 100){ %>
                                                <div class="bar-3" style="width: <%=porcentaje%>%"></div>


                                                <%}else{ %>
                                                    
                                                    <div class="bar-5" style="width: <%=porcentaje%>%"></div>
                                                 <%} %>
                                           
                                        </div>
                                    </div>
                                    <div class="side right" style="width: 100px;">
                                       
                                            <div><span>meta: <%=user.meta_agua%> mL</span>
                                            </div>
                                    </div>
                                    <%i++; })%>
                                        <% if(admon===1){ %>
                                            <form action="/grupos/borrarGrupo" method="post">
                                                <input type="hidden" name="codigo" value="<%=codigo%>">
                                                <input type="submit" class="btn btn-primary"
                                                    data-bss-hover-animate="rubberBand" type="submit"
                                                    style="position: static;display: inline-block;margin-left: 30%;background: #52b4e8; border-color: #52b4e8 ;margin-top: 1rem; color: white;"
                                                    value="Borrar">


                                            </form>

                                            <%}else{ %>
                                                <form action="/grupos/salirGrupo" method="post">
                                                    <input type="hidden" name="codigo" value="<%=codigo%>">
                                                    <input type="submit" class="btn btn-primary"
                                                        data-bss-hover-animate="rubberBand" type="submit"
                                                        style="position: static;display: inline-block;margin-left: 30%;background: rgb(233, 134, 6); border-color:rgb(233, 134, 6) ;margin-top: 1rem; color: black;"
                                                        value="Salir">


                                                </form>


                                                <% } %>


                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-xxl-6">
                    <div class="bootstrap_chat">
                        <div class="container py-5 px-4">
                            <p><iframe class="msr" src="https://chatwr2-production.up.railway.app/<%=nombre%>" width=600
                                    height="500"></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="/assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="/assets/js/bs-init.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.tablesorter/2.31.2/js/jquery.tablesorter.js"></script>
